<%= render 'navbar' %>
<div class="row"><br/><br/><br/></div>
<div class="col-md-12 col-md-offset-9">
<div class="btn btn-default"><%= link_to 'Add Image', new_album_image_path(params[:album_id]) %></div></div><hr/><br/>


<div class="container">
	<div class="row">
		<div class="list-group gallery">
		<% @image.each do |image| %>
            <div class="col-sm-4 col-xs-6 col-md-3 col-lg-3">
                <div class="thumbnail fancybox" rel="ligthbox" href="<%= image.picture.url %>">
                    <div style="height:100px;width:150px"><%= link_to image_tag(image.picture.url), image.picture.url(:thumb) %></div>
                    <div class="text-right">
                        <p><small class="text-muted">Image Tags :<%= render image.tags %></small></p>
                        <div class="btn btn-default"><%= link_to 'Destroy', album_image_path(params[:album_id], image ), method: :delete, data: { confirm: 'Are you sure?'} %></div>
                    </div> <!-- text-right / end -->
                </div>
            </div>
        <% end %>     
        </div>
    </div>
</div>


